@model GameForum_Washüttl.Application.Services.PaginatedList<GameForum_Washüttl.DomainModel.Models.Game>

@{
    ViewData["Title"] = "Games";
    string prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    string nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="overflow-x-auto">
    <div class="min-w-screen min-h-screen bg-gray-100 flex items-top justify-center bg-gray-100 font-sans overflow-hidden">
        <div class="w-full lg:w-5/6">
            <div class="bg-white shadow-md rounded my-6">
                <div class="bg-gray-100">
                    <h1 class="mb-3 mx-2 text-4xl">Games</h1>
                    <p class="mb-3 mx-2">A list of all games.</p>
                    <form asp-action="Index">
                        <input class="py-2 px-3 mx-2 rounded-lg border-2 mt-1 focus:outline-none focus:ring-2 focus:border-transparent turquoiseBorder" type="text" placeholder="Search for something..." name="filter" maxlength="40"/>
                        <input class="text-white font-bold p-2 rounded w-20 mb-3 turquoiseButton" type="submit" value="Search"/>
                    </form>
                    <a class="mx-2 text-white font-bold p-2 rounded w-80 mb-3 turquoiseButton" asp-action="Create">Add game</a>
                </div>
                <div class="bg-gray-100"><br/></div>
                <table class="min-w-max w-full table-auto">
                    <thead>
                    <tr class="bg-gray-200 text-gray-600 text-sm leading-normal">
                        <th class="py-3 px-6 text-left">
                            <a class="px-8 py-2 text-md font-medium text-white transition-colors duration-300 transform rounded turquoiseButton" asp-route-pageIndex="@(Model.PageIndex)" asp-route-filter="@ViewData["CurrentFilter"]" asp-route-sortedBy="@ViewData["NameSortParam"]" asp-action="Index">Name</a>
                        </th>
                        <th class="py-3 px-6 text-center">Multiplayer</th>
                        <th class="py-3 px-6 text-center">
                            <a class="px-8 py-2 text-md font-medium text-white transition-colors duration-300 transform rounded turquoiseButton" asp-route-pageIndex="@(Model.PageIndex)" asp-route-filter="@ViewData["CurrentFilter"]" asp-route-sortedBy="@ViewData["GenreSortParam"]" asp-action="Index">Genre</a>
                        </th>
                        <th class="py-3 px-6 text-center">
                            <a class="px-8 py-2 text-md font-medium text-white transition-colors duration-300 transform rounded turquoiseButton" asp-route-pageIndex="@(Model.PageIndex)"  asp-route-filter="@ViewData["CurrentFilter"]" asp-route-sortedBy="@ViewData["ReleaseDateSortParam"]" asp-action="Index">Release Date</a>
                        </th>        
                        <th class="py-3 px-6 text-center">Game Cover</th>
                        <th class="py-3 px-6 text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody class="text-gray-600 text-sm font-light">
                    @foreach (var game in Model)
                    {
                        string checkboxEnabled = game.g_multiplayer ? "checked" : "";
                        
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left">
                                <div class="flex items-center">
                                    <span>@game.g_name</span>
                                </div>
                            </td>
                            <td class="py-3 px-6 text-center">
                                <div class="flex items-center justify-center">
                                    <input type="checkbox" class="turquoise" style="color: mediumturquoise" @checkboxEnabled disabled>
                                </div>
                            </td>
                            <td class="py-3 px-6 text-center">
                                <span class="bg-purple-200 text-purple-600 py-1 px-3 rounded-full text-xs">@game.g_genre</span>
                            </td>
                            <td class="py-3 px-6 text-center">
                                <div class="flex items-center justify-center">
                                    <span>@game.ReleaseDate.ToShortDateString()</span>
                                </div>
                            </td>
                            <td class="py-3 px-6 text-center">
                                <div class="flex items-center justify-center">
                                    <img src="@game.g_imageLink" width="90" height="100" />
                                </div>
                            </td>
                            <td class="py-3 px-6 text-center">
                                <div class="flex item-center justify-center">
                                    <a asp-action="EditGame" asp-route-id="@game.g_name">
                                        <div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                            </svg>
                                        </div>
                                    </a>
                                    <a asp-action="DeleteGame" asp-route-id="@game.g_name">
                                        <div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </div>
                                    </a>
                                </div>
                            </td>
                        </tr>   
                    }
                    </tbody>
                </table>
            </div>
            <a asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-sortedBy="@ViewData["CurrentSort"]" class="btn btn-primary @prevDisabled">Previous</a>
            
            <a asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-sortedBy="@ViewData["CurrentSort"]" class="btn btn-primary @nextDisabled">Next</a>
        </div>
    </div>
</div>

   