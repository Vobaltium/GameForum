@model GameForum_Washüttl.DomainModel.Models.PlayersPlayGames

@{
    ViewData["Title"] = "Add a request";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <p>Write him/her what and how you want to play.</p>
        <form asp-action="AddRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pg_g_name" class="control-label">Game Name:</label>
                <select asp-for="pg_g_name" class="form-control" asp-items="ViewBag.PgGName"></select>
            </div>
            <div class="form-group">
                <label asp-for="pg_p_name" class="control-label">Player Name:</label>
                <input asp-for="pg_p_name" class="form-control" />
                <span asp-validation-for="pg_p_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pg_message" class="control-label">Message:</label>
                <input asp-for="pg_message" class="form-control" />
                <span asp-validation-for="pg_message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index">Back to the requests.</a>
    </div>
</div>