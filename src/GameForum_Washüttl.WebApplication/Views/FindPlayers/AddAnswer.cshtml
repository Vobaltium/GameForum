@model GameForum_Washüttl.DomainModel.Models.Answer

@{
    ViewData["Title"] = "Write a message";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <p>Write him/her a message.</p>
        <form asp-action="AddAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="a_p_sender" class="control-label">Player Name:</label>
                <input asp-for="a_p_sender" class="form-control" />
                <span asp-validation-for="a_p_sender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="a_message" class="control-label">Message:</label>
                <input asp-for="a_message" class="form-control" />
                <span asp-validation-for="a_message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index">Back to the requests.</a>
    </div>
</div>