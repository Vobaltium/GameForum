@{
    ViewData["Title"] = "Home Page";
}
<link href="https://unpkg.com/tailwindcss/dist/tailwind.css" rel="stylesheet">
<link href="https://tailwindcss-forms.vercel.app/dist/forms.min.css" rel="stylesheet">

<header class="bg-blue-400"/>
<section class="flex items-center justify-center" style="height: 500px;">
    <div class="text-center">
        <p class="text-xl font-medium tracking-wider text-gray-300">Here you can find people to play!</p>
        <h2 class="mt-6 text-3xl font-bold text-white md:text-5xl">Welcome to the GameForum<br></h2>
        <div class="flex justify-center mt-8">
            <a class="px-8 py-2 text-lg font-medium text-white transition-colors duration-300 transform bg-indigo-600 rounded hover:bg-indigo-500" href="/login">Login to get started</a>
        </div>
    </div>
</section>

<section class="bg-white">
    <div class="max-w-5xl px-6 py-8 mx-auto">
        <h2 class="text-3xl font-semibold text-gray-800">Welcome to the Home Page of the Player Management</h2>
        <p class="max-w-lg mt-4 text-gray-600">Here you can create players and games and bind them to each other to create some statistics.</p>
    </div>
</section>
